<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:background="@color/background_color">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            tools:context="glory.a2lol.DaftarActivity">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="Tambah Kost Baru"
                android:textColor="@color/white_greyish"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:src="@drawable/empty_image"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/img_browse"/>

            <EditText
                android:id="@+id/etNamaKos"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/house_icon"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:hint="Nama Kost"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="16sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/white_greyish" />

            <EditText
                android:id="@+id/etHargaKos"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/plate2"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:hint="Harga"
                android:inputType="number"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="16sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/white_greyish" />

            <EditText
                android:id="@+id/etSisaKamar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/plate2"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:hint="Sisa kamar Kosong"
                android:inputType="number"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="16sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/white_greyish" />

            <TextView android:id="@+id/createAccount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Alamat"
                android:textColor="@color/white_greyish"
                android:textSize="16dip"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/white_greyish" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnPilihAlamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"
                    android:text="Pilih lokasi alamat"
                    android:textColor="@color/background_color"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView android:id="@+id/a"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Fasilitas"
                android:textColor="@color/white_greyish"
                android:textSize="16dip"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Apa kamar memiliki AC ? "
                    android:textColor="@color/white_greyish"
                    android:textSize="16dip"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:id="@+id/toogleAC"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Apa kamar memiliki WC di dalam ? "
                    android:textColor="@color/white_greyish"
                    android:textSize="16dip"
                    android:layout_toLeftOf="@+id/toogleWC"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:id="@+id/toogleWC"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Apa kamar memiliki Kasur? "
                    android:textColor="@color/white_greyish"
                    android:textSize="16dip"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:id="@+id/toogleKasur"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Apa kamar memiliki Lemari? "
                    android:textColor="@color/white_greyish"
                    android:textSize="16dip"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:id="@+id/toogleLemari"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Apa kamar memiliki Wifi? "
                    android:textColor="@color/white_greyish"
                    android:textSize="16dip"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:id="@+id/toogleWifi"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Apa kost dekat dengan kampus? "
                    android:textColor="@color/white_greyish"
                    android:textSize="16dip"
                    android:layout_toLeftOf="@+id/toogleNearKampus"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:id="@+id/toogleNearKampus"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:id="@+id/relaSpinnerKampus">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pilih Kampus"
                    android:textSize="18sp"
                    android:id="@+id/txtSpiner"
                    android:textColor="#fff"
                    />

                <Spinner
                    android:padding="10dp"
                    android:layout_below="@+id/txtSpiner"
                    android:id="@+id/sp_kampus"
                    android:entries="@array/listKampus"
                    android:background="@drawable/et_background1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></Spinner>

            </RelativeLayout>







            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:id="@+id/view2"
                android:layout_marginBottom="10dp"
                android:background="@color/white_greyish" />

            <Button
                android:id="@+id/signUpBtn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/loginbutton_selector"
                android:padding="3dp"
                android:text="Next"
                android:textColor="@color/background_color"
                android:textSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:visibility="gone" />

    </RelativeLayout>
</ScrollView>